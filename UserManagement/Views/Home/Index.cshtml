@model List<UserManagement.DTOs.UserDTO>
@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="#">User Management</a>
        <div class="navbar-nav ms-auto">
            <span class="navbar-text me-3">
                Welcome, @Context.Session.GetString("UserName")
            </span>
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-light">Logout</button>
            </form>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <div id="alert-container"></div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title mb-0">User List</h3>
        </div>
        <div class="card-body">
            <!-- Toolbar -->
            <div class="toolbar mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary" id="blockBtn"
                                data-bs-toggle="tooltip" title="Block selected users">
                            <i class="bi bi-lock"></i> Block
                        </button>
                        <button type="button" class="btn btn-outline-success" id="unblockBtn"
                                data-bs-toggle="tooltip" title="Unblock selected users">
                            <i class="bi bi-unlock"></i>
                        </button>
                        <button type="button" class="btn btn-outline-danger" id="deleteBtn"
                                data-bs-toggle="tooltip" title="Delete selected users">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                    <div class="d-flex align-items-center">
                        <input type="text" class="form-control me-2" id="filterInput" placeholder="Filter" style="width: 200px;">
                        <div class="selected-count text-muted">
                            <span id="selectedCount">0</span> selected
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 50px;">
                                <input type="checkbox" class="form-check-input" id="selectAll"
                                       data-bs-toggle="tooltip" title="Select all users">
                            </th>
                            <th>
                                <a href="#" class="text-white text-decoration-none" onclick="sortTable('name')">
                                    Name <i class="bi bi-chevron-down" id="nameSortIcon"></i>
                                </a>
                            </th>
                            <th>
                                <a href="#" class="text-white text-decoration-none" onclick="sortTable('email')">
                                    Email <i class="bi bi-chevron-down" id="emailSortIcon"></i>
                                </a>
                            </th>
                            <th>
                                <a href="#" class="text-white text-decoration-none" onclick="sortTable('lastLogin')">
                                    Last seen <i class="bi bi-chevron-down" id="lastLoginSortIcon"></i>
                                </a>
                            </th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="userTableBody">
                        @foreach (var user in Model)
                        {
                            <tr data-user-id="@user.Id">
                                <td>
                                    <input type="checkbox" class="form-check-input user-checkbox"
                                           value="@user.Id">
                                </td>
                                <td>
                                    <div>
                                        <div class="fw-bold">@user.Name</div>
                                        <small class="text-muted">N/A</small>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <div>
                                        <div class="last-login-text" data-bs-toggle="tooltip" 
                                             title="@(user.LastLogin?.ToString("MMMM dd, yyyy HH:mm:ss") ?? "Never logged in")">
                                            @if (user.LastLogin.HasValue)
                                            {
                                                var timeAgo = DateTime.UtcNow - user.LastLogin.Value;
                                                if (timeAgo.TotalMinutes < 1)
                                                {
                                                    <span>less than a minute ago</span>
                                                }
                                                else if (timeAgo.TotalMinutes < 60)
                                                {
                                                    <span>@((int)timeAgo.TotalMinutes) minute@(timeAgo.TotalMinutes == 1 ? "" : "s") ago</span>
                                                }
                                                else if (timeAgo.TotalHours < 24)
                                                {
                                                    <span>@((int)timeAgo.TotalHours) hour@(timeAgo.TotalHours == 1 ? "" : "s") ago</span>
                                                }
                                                else if (timeAgo.TotalDays < 7)
                                                {
                                                    <span>@((int)timeAgo.TotalDays) day@(timeAgo.TotalDays == 1 ? "" : "s") ago</span>
                                                }
                                                else
                                                {
                                                    <span>@((int)(timeAgo.TotalDays / 7)) week@((timeAgo.TotalDays / 7) == 1 ? "" : "s") ago</span>
                                                }
                                            }
                                            else
                                            {
                                                <span>Never</span>
                                            }
                                        </div>
                                        <div class="sparkline-container" style="height: 20px; width: 100px;">
                                            <!-- Sparkline chart would go here -->
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(user.Status.ToLower() == "active" ? "bg-success" : "bg-warning")">
                                        @user.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div id="noUsers" class="text-center text-muted py-4">
                    No users found
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <span id="deleteUserCount">0</span> user(s)?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Users</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dashboard.js"></script>
}